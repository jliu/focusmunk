{
  "manifest_version": 3,
  "name": "focusmunk",
  "version": "1.0",
  "description": "Only allows sites that match a user-provided whitelist during scheduled focus times.",
  "permissions": [
    "storage",
    "tabs",
    "alarms"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Focus Whitelist"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["block.html", "block.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
